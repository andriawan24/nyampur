<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavMain"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:paddingHorizontal="@dimen/dimen_24dp"
        app:backgroundTint="@color/colorWhite"
        app:itemActiveIndicatorStyle="@style/ShapeAppearance.Material3.Corner.None"
        app:itemBackground="@null"
        app:itemIconSize="@dimen/dimen_24dp"
        app:itemPaddingBottom="@dimen/dimen_20dp"
        app:itemPaddingTop="@dimen/dimen_24dp"
        app:itemRippleColor="@null"
        app:itemTextAppearanceActive="@style/NyampurTextStyle.Medium.Smallest"
        app:itemTextAppearanceInactive="@style/NyampurTextStyle.Medium.Smallest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu_main">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description_scan_ingredients"
            android:src="@drawable/img_scan_ingredient"
            app:backgroundTint="@color/colorPrimary"
            app:elevation="@dimen/dimen_0dp"
            app:tint="@color/colorWhite" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>