<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toTopOf="@id/btnContinue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dimen_24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:insetLeft="@dimen/dimen_0dp"
                android:insetTop="@dimen/dimen_0dp"
                android:insetRight="@dimen/dimen_0dp"
                android:insetBottom="@dimen/dimen_0dp"
                android:minWidth="@dimen/dimen_42dp"
                android:minHeight="@dimen/dimen_42dp"
                android:padding="@dimen/dimen_12dp"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="@dimen/dimen_8dp"
                app:icon="@drawable/ic_back" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_32dp"
                android:fontFamily="@font/satoshi_bold"
                android:text="@string/title_ingredient_list"
                android:textColor="@color/colorTextPrimary"
                android:textSize="@dimen/text_size_22sp" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/NyampurTextStyle.Medium.TextSecondary.16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="@string/description_ingredient_list" />

            <id.nisyafawwaz.nyampur.android.utils.views.MultiStateView
                android:id="@+id/msvIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_16dp"
                android:paddingHorizontal="@dimen/dimen_24dp"
                app:msvEmptyView="@layout/layout_default_empty"
                app:msvErrorView="@layout/layout_default_error"
                app:msvLoadingView="@layout/layout_default_loading">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvIngredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:spanCount="3"
                    tools:itemCount="3"
                    tools:layoutManager="LinearLayoutManager"
                    tools:listitem="@layout/item_ingredient" />

            </id.nisyafawwaz.nyampur.android.utils.views.MultiStateView>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/NyampurButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_24dp"
        android:layout_marginBottom="@dimen/dimen_34dp"
        android:text="@string/action_continue"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
